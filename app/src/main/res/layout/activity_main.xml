<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTintMode="add"
    android:backgroundTint="#777"
    android:background="@drawable/background3"
    >
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"

        />
    <ImageButton
        android:id="@+id/dictionaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/merriamwebster"
        android:layout_below="@id/text"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="110dp"
        />

    <ImageButton
        android:id="@+id/newsFeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ressnews2"
        android:layout_toRightOf="@id/dictionaryButton"
        android:layout_below="@id/text"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        />

    <ImageButton
        android:id="@+id/newYorkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nytimes2"
        android:layout_below="@id/dictionaryButton"
        android:layout_marginLeft="75dp"/>

    <ImageButton
        android:id="@+id/airplaneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paperplane2"
        android:layout_toRightOf="@id/dictionaryButton"
        android:layout_below="@id/dictionaryButton"
        android:layout_marginLeft="10dp"
/>
</RelativeLayout>