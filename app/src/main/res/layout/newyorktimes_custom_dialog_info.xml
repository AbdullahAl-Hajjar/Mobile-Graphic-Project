<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/nytimes_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nytimes"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nytimes_logo"
        android:id="@+id/about_1"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:text="@string/nytimes_about1"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_1"
        android:id="@+id/about_2"
        android:text="@string/nytimes_about2"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_2"
        android:id="@+id/about_3"
        android:textAlignment="center"
        android:text="@string/nytimes_about3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_3"
        android:id="@+id/about_4"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="@string/nytimes_about4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_4"
        android:id="@+id/about_5"
        android:textAlignment="center"
        android:text="@string/nytimes_about5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_5"
        android:id="@+id/about_6"
        android:layout_gravity="left"
        android:text="@string/nytimes_about6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_6"
        android:id="@+id/about_7"
        android:layout_gravity="left"
        android:text="@string/nytimes_about7" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_7"
        android:id="@+id/about_8"
        android:layout_gravity="left"
        android:text="@string/nytimes_about8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_8"
        android:id="@+id/about_9"
        android:layout_gravity="left"
        android:text="@string/nytimes_about9" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_9"
        android:id="@+id/about_10"
        android:layout_gravity="left"
        android:text="@string/nytimes_about10" />
</RelativeLayout>