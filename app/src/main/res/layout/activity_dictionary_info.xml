<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DictionaryInfo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dictionaryInfoTb"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dictionaryInfoTb"
        android:paddingTop="15dp"
        android:id="@+id/infoIcon"
        android:contentDescription="@string/dInfo1"
        android:src="@drawable/merriamwebster"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoIcon"
        android:id="@+id/infoLine1"
        android:text="@string/dInfo1"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoLine1"
        android:id="@+id/infoLine2"
        android:text="@string/dInfo2"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoLine2"
        android:id="@+id/infoLine3"
        android:text="@string/dInfo3"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoLine3"
        android:id="@+id/infoLine4"
        android:text="@string/dInfo4"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoLine4"
        android:id="@+id/infoLine5"
        android:text="@string/dInfo5"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dictInstructions"
        android:layout_below="@id/infoLine5"
        android:textAlignment="viewStart"
        android:padding="15dp"
        android:text="@string/dictInstructions"/>

</RelativeLayout>